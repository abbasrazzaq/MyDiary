<Window x:Class="MyDiary.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyDiary"
        mc:Ignorable="d"
        Title="Diary Locked!" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label>Name:</Label>
            <TextBox x:Name="usernameTextBox"></TextBox>
            <Label>Password:</Label>
            <PasswordBox x:Name="passwordBox" />
            <Button x:Name="loginButton" Click="loginButton_Click">Unlock Diary</Button>
        </StackPanel>
        
    </Grid>
</Window>
